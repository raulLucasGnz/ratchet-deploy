<!-- Botón de compra -->
<button id="comprar">Comprar</button>

<p id="copy">ratchet ©2025</p>

<script>
  document.getElementById('comprar').addEventListener('click', async function () {
    try {
      const response = await fetch('/create-checkout-session', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
      });

      const { url } = await response.json();
      window.location.href = url; // Redirigir al cliente a Stripe Checkout
    } catch (error) {
      console.error('Error iniciando Stripe Checkout:', error);
      alert('Hubo un problema al iniciar el proceso de compra. Por favor, inténtalo más tarde.');
    }
  });
</script>
